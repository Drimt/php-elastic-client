{
    "name": "drimt/elastic-client",
    "description": "PHP client library for Elasticsearch",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "insolita/unused-scanner": "^2.4",
        "slevomat/coding-standard": "^8.27",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Drimt\\ElasticClient\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Thibault Debatty",
            "email": "thibault@drimt.io"
        }
    ],
    "config": {
        "cache-dir": "./.cache",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
